# Virtual Studio Node - Complete Configuration Template
# Generated: 2025-11-05 13:21:33
# SECURITY: Keep this file secure and never commit to version control

# System Configuration
HOSTNAME=virtual-studio-node
INSTALL_DIR=/opt/virtualstudio
LOG_DIR=/var/log/virtualstudio
USER=virtualstudio
ENVIRONMENT=production

# OBS Configuration
OBS_WEBSOCKET_PASSWORD=secure_random_password_generated_on_install
OBS_HOST=localhost
OBS_PORT=4455
OBS_WEBSOCKET_ENABLED=true

# Discord Bot Configuration
DISCORD_BOT_NAME=VirtualStudioRecorder  # âœ¨ EASY TO CUSTOMIZE: Change this to name your bot
DISCORD_BOT_TOKEN=your_discord_bot_token_here
DISCORD_GUILD_ID=your_guild_server_id
DISCORD_VOICE_CHANNEL_ID=your_voice_channel_id
DISCORD_COMMAND_PREFIX=/
DISCORD_LOGGING=true

# YouTube Integration
YOUTUBE_CLIENT_ID=your_youtube_client_id_here
YOUTUBE_CLIENT_SECRET=your_youtube_client_secret_here
YOUTUBE_API_KEY=your_youtube_api_key_here
YOUTUBE_UPLOAD_PRIVACY=unlisted
YOUTUBE_AUTO_UPLOAD=true

# GitHub Integration
GITHUB_TOKEN=ghp_your_github_personal_access_token_here
GITHUB_REPO=ElectricSunshineCult/virtualstudio-system
GITHUB_COMMIT_TRANSCRIPTS=true
GITHUB_CREATE_RELEASES=true

# Cloud Storage
S3_BUCKET=your_s3_bucket_name
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1
RCLONE_REMOTE=your_rclone_remote_name

# Recording Configuration
RECORDING_FORMAT=mp4
VIDEO_BITRATE=3500k
AUDIO_BITRATE=192k
RECORDING_DIR=/opt/virtualstudio/recordings
TRANSCRIPT_DIR=/opt/virtualstudio/transcripts
EXPORT_DIR=/opt/virtualstudio/exports
RETENTION_DAYS=30

# Audio Configuration
AUDIO_INPUT_DEVICE=default
AUDIO_OUTPUT_DEVICE=default
DISCORD_AUDIO_TRACK=1
SYSTEM_AUDIO_TRACK=2
ENABLE_NOISE_SUPPRESSION=true
ENABLE_ECHO_CANCELLATION=true

# Performance & Reliability
HEALTH_CHECK_INTERVAL=30
PROCESS_RESTART_COUNT=3
DISK_SPACE_THRESHOLD=80
MAX_UPLOAD_RETRIES=3
UPLOAD_TIMEOUT=3600
AUTO_CLEANUP_ENABLED=true

# Browser Extension
BROWSER_EXTENSION_ENABLED=true
CHROME_PROFILE_PATH=/home/virtualstudio/.config/google-chrome